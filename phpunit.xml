<?xml version="1.0" encoding="UTF-8" ?>

<phpunit bootstrap="./vendor/autoload.php">
  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src</directory>

      <exclude>
        <directory suffix=".php">vendor</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
